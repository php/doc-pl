 <refsect1 role="examples"><!-- {{{ -->
  &reftitle.examples;
  <example>
   <title>Drukowanie zawartości data://</title>
   <programlisting role="php">
<![CDATA[
<?php
// wyświetli "I love PHP"
echo file_get_contents('data://text/plain;base64,SSBsb3ZlIFBIUAo=');
?>
]]>
   </programlisting>
  </example>

  <example>
   <title>Pobierz typ Nieśnika</title>
   <programlisting role="php">
<![CDATA[
<?php
$fp   = fopen('data://text/plain;base64,', 'r');
$meta = stream_get_meta_data($fp);

// wyświetli "text/plain"
echo $meta['mediatype'];
?>
]]>
   </programlisting>
  </example>
