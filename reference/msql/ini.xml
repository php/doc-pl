 &ini.descriptions.title;

 <para>
  <variablelist>
   <varlistentry xml:id="ini.msql.allow-persistent">
    <term>
     <parameter>msql.allow_persistent</parameter>
     <type>boolean</type>
    </term>
    <listitem>
     <para>
      Określa, czy pozwolić na połączenia stałe z serwerem mSQL.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-persistent">
    <term>
     <parameter>msql.max_persistent</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      Maksymalna liczba połączeń stałych z serwerem mSQL na proces.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-links">
    <term>
     <parameter>msql.max_links</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      Maksymalna liczba połączeń z serwerem mSQL na proces, włączając
      połączenia stałe.
     </para>
    </listitem>
   </varlistentry>

  </variablelist>
 </para>
