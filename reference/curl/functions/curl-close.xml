<refentry xml:id="function.curl-close" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>curl_close</refname>
  <refpurpose>Zamyka sesję cURL</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>curl_close</methodname>
   <methodparam><type>resource</type><parameter>ch</parameter></methodparam>
  </methodsynopsis>
  <para>
   Zamyka sesję cURL i uwalnia wszystkie zasoby. Uchwyt cURL,
   <parameter>ch</parameter>, również jest usuwany.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &curl.ch.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Inicjalizaca sesji cURL i pobranie strony</title>
    <programlisting role="php">
<![CDATA[
<?php
// utwórz uchwyt cURL
$ch = curl_init();

// ustaw URL i inne potrzebne opcje
curl_setopt($ch, CURLOPT_URL, "http://www.example.com/");
curl_setopt($ch, CURLOPT_HEADER, 0);

// pobierz dane i przekaż do przeglądarki
curl_exec($ch);

// zamknij zasób cURL i zwolnij zasoby systemowe
curl_close($ch);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>curl_init</function></member>
    <member><function>curl_multi_close</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

